<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:cardBackgroundColor="@color/color_background_light"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp">
            <TextView
                android:id="@+id/appName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/montserrat_black"
                android:gravity="center"
                android:text="@string/saveastxt"
                android:textColor="@color/white"
                android:textSize="21sp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvYourTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/your_text"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@id/appName"/>

        <EditText
            android:id="@+id/etYourText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/et_background"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:hint="@string/your_text"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/tvYourTxt"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginVertical="26dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/save"
                android:textSize="17sp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/etYourText"
                app:layout_constraintTop_toBottomOf="@id/etYourText"
                app:layout_constraintWidth_percent="0.4"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewSavedText"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginVertical="26dp"
                android:backgroundTint="@color/color_background_light"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/saved_text"
                android:textColor="@color/blue"
                android:textSize="17sp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/etYourText"
                app:layout_constraintTop_toBottomOf="@id/etYourText"
                app:layout_constraintWidth_percent="0.55"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>











